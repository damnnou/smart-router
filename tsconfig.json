{
  "extends": "./base",
  "include": ["./evm"],
  "exclude": ["**/*.test.ts", "./dist/**"],
  "compilerOptions": {
    "rootDir": "./",
    "outDir": "./dist",
    "target": "ES2020",
    "lib": ["ES2020"],
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "skipLibCheck": true,
    "moduleResolution": "Node",
    "allowJs": true
  }
}
